{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {    
     "Prefix": {
       "type": "string",
       "metadata": {
         "description": "Prefix for Azure Resources"
       }
     },
     "ForceUpdateValue": {
       "type": "string",
       "defaultValue": "[utcNow()]",
       "metadata": {
         "description": "Get Current time"
       }
     },
     "CertSubjectName": {
       "type": "string",
       "metadata": {
         "description": "FQDN for Cert Subject Name"
       }
     }    
  },  
  "variables": {
    "STName": "[concat(parameters('Prefix'),'storage')]",
    "KVName": "[concat(parameters('Prefix'),'keyvault')]",
    "IDName7": "[concat(parameters('Prefix'),'ID-7')]",    
    "DSName7": "[concat(parameters('Prefix'),'DS-7')]",        
    "roleAssignmentName": "[guid(concat(resourceGroup().id, 'contributor'))]",
    "DSArgs7": "[concat('-vaultName ', variables('KVName'), ' -certificateName ', 'DSCert-7 ','-subjectName ', parameters('CertSubjectName'))]",
    "DSScript7": "https://raw.githubusercontent.com/DeanCefola/DeploymentScripts/main/7-DeployScripts/7-CreateCert.ps1" 
  },
  "resources": [    
    {
      "name": "[variables('STName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2020-08-01-preview",
      "tags": {
        "displayName": "[variables('STName')]"
      },
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "COPY-Storage",
        "count": 1
      },
      "kind": "StorageV2",
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      }
    },
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2018-11-30",
      "name": "[variables('IDName7')]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "COPY-ManagedID",
        "count": 1
      },
      "comments": "Managed ID to change Azure Resources"      
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2018-09-01-preview",
      "name": "[variables('roleAssignmentName')]",
      "copy": {
        "name": "COPY-IDRights",
        "count": 1
      },    
      "properties": {
          "roleDefinitionId": "[resourceId('Microsoft.Authorization/roleDefinitions', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]",
          "principalId": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('IDName7')), '2018-11-30').principalId]",
          "scope": "[resourceGroup().id]",
          "principalType": "ServicePrincipal"
      },
      "dependsOn": [
        "COPY-ManagedID"
      ]
    },
    {
        "type": "Microsoft.KeyVault/vaults",
        "apiVersion": "2016-10-01",
        "name": "[variables('KVName')]",
        "location": "[resourceGroup().location]",
        "properties": {
            "enabledForDeployment": true,
            "enabledForDiskEncryption": true,
            "enabledForTemplateDeployment": true,
            "tenantId": "[subscription().tenantId]",
            "accessPolicies": [
                {                    
                    "objectId": "[reference(concat(resourceId('Microsoft.ManagedIdentity/','userAssignedIdentities'), '2018-11-30').objectId)]",
                    "tenantId": "[subscription().tenantId]",
                    "permissions": {
                        "keys":[
                            "Get",
                            "List",
                            "Update",
                            "Create",
                            "Import",
                            "Delete",
                            "Recover",
                            "Backup",
                            "Restore"
                        ],
                        "secrets": [
                            "Get",
                            "List",
                            "Set",
                            "Delete",
                            "Recover",
                            "Backup",
                            "Restore"
                        ],
                        "certificates": [
                            "Get",
                            "List",
                            "Update",
                            "Create",
                            "Import",
                            "Delete",
                            "Recover",                            
                            "ManageContacts",
                            "ManageIssuers",
                            "GetIssuers",
                            "ListIssuers",
                            "SetIssuers",
                            "DeleteIssuers"
                        ]
                    }
                }
            ],
            "sku": {
                "name": "standard",
                "family": "A"
            },
            "networkAcls": {
                "defaultAction": "Allow",
                "bypass": "AzureServices"
            }
        }
    },
    {
        "type": "Microsoft.KeyVault/vaults/secrets",
        "apiVersion": "2016-10-01",
        "name": "[concat(variables('KVName'), '/', 'DeploymentSecret')]",
        "location": "[resourceGroup().location]",
        "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults', variables('KVName'))]"
        ],
        "properties": {
            "value": "all"
        }
    },
    {
      "type": "Microsoft.resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "name": "[variables('DSName7')]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "COPY-DeployScript2",
        "count": 1
      },
      "kind": "AzurePowerShell",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {          
         "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities',variables('IDName7'))]": {}
        }
      },      
      "properties": {
        "azPowerShellVersion": "5.0",        
        "timeout": "PT15M",
        "retentionInterval": "P1D",        
        "cleanupPreference": "OnSuccess",
        "containerSettings": {
          "containerGroupName": "[concat(variables('DSName7'),'-container')]"
        }, 
        "storageAccountSettings": {
          "storageAccountName": "[variables('STName')]",
          "storageAccountKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('STName')), '2019-06-01').keys[0].value]"
        },        
        "arguments": "[variables('DSArgs7')]",        
        "primaryScriptUri": "[variables('DSScript7')]",
        "forceUpdateTag": "[parameters('ForceUpdateValue')]"
      },
      "dependsOn": [
        "COPY-Storage",
        "COPY-ManagedID",
        "COPY-IDRights"
      ]
    }   
  ],
  "outputs": {
    "DS7-Output": {
      "type": "string",
       "value": "[reference(variables('DSName7')).outputs.text]"
    }
  }
}