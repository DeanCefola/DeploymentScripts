{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {    
     "Prefix": {
       "type": "string",
       "metadata": {
         "description": "Prefix for Azure Resources"
       }
     }    
  },  
  "variables": {
    "STName": "[concat(parameters('Prefix'),'storage')]",
    "IDName": "[concat(parameters('Prefix'),'ID-2')]",
    "DSName1": "[concat(parameters('Prefix'),'DS-1')]",
    "DSName2": "[concat(parameters('Prefix'),'DS-2')]",
    "DSScript": "https://raw.githubusercontent.com/DeanCefola/DeploymentScripts/main/Code/NewStorage.ps1",
    "DSArgs": "[concat('-Prefix ', parameters('Prefix'))]"
  },
  "resources": [
    {
      "name": "[variables('STName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2020-08-01-preview",
      "tags": {
        "displayName": "[variables('STName')]"
      },
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "COPY-Storage",
        "count": 1
      },
      "kind": "StorageV2",
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      }
    },
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2018-11-30",
      "name": "[variables('IDName')]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "COPY-ManagedID",
        "count": 1
      },
      "comments": "Managed ID to change Azure Resources"      
    },
    {
      "type": "Microsoft.resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "name": "[variables('DSName1')]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "COPY-DeployScript2",
        "count": 1
      },
      "kind": "AzurePowerShell",            
      "properties": {
        "azPowerShellVersion": "5.0",        
        "timeout": "PT15M",
        "retentionInterval": "P1D",        
        "cleanupPreference": "OnSuccess", 
        "arguments": "[variables('DSArgs')]",       
        "scriptContent":"
          Param ([Parameter(Mandatory=$true)][string]$Prefix)
            $output = $Prefix
            $DeploymentScriptOutputs = @{}
            $DeploymentScriptOutputs['text'] = $output            
            Write-Output $output
          "
      },
      "dependsOn": [
        "COPY-Storage",
        "COPY-ManagedID"
      ]
    },
    {
      "type": "Microsoft.resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "name": "[variables('DSName2')]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "COPY-DeployScript1",
        "count": 1
      },
      "kind": "AzurePowerShell",      
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {          
          "[resourceid('Microsoft.ManagedIdentity/userAssignedIdentities', variables('IDName'))]":{}
        }
      },
      "properties": {
        "azPowerShellVersion": "5.0",        
        "timeout": "PT15M",
        "retentionInterval": "P1D",        
        "cleanupPreference": "OnSuccess", 
        "arguments": "[variables('DSArgs')]",       
        "primaryScriptUri": "[variables('DSScript')]"
      },
      "dependsOn": [
        "COPY-Storage",
        "COPY-ManagedID"
      ]
    }   
  ],
  "outputs": {
    "STName": {
      "type": "string",
      "value": "[variables('STName')]"
    }
  }
}