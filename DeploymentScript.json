{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "UserName": {
      "type": "string",
      "metadata": {
        "description": "Azure UserName"
      }
    },
     "Password": {
       "type": "securestring",
       "metadata": {
         "description": "Azure Password"
       }
     },
     "Prefix": {
       "type": "string",
       "metadata": {
         "description": "Prefix for Azure Resources"
       }
     }    
  },  
  "variables": {
    "STName": "[concat(parameters('Prefix'),'storage')]",
    "IDName": "[concat(parameters('Prefix'),'ID-1')]",
    "DSName": "[concat(parameters('Prefix'),'DS-1')]",
    "DSScript": "https://raw.githubusercontent.com/DeanCefola/DeploymentScripts/main/Code/NewStorage.ps1",
    "DSArgs": "[concat('-UserName ', parameters('UserName'), ' -PWD ', parameters('Password'), ' -Prefix ', parameters('Prefix'))]"
  },
  "resources": [
    {
      "name": "[variables('STName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2020-08-01-preview",
      "tags": {
        "displayName": "[variables('STName')]"
      },
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "COPY-Storage",
        "count": 1
      },
      "kind": "StorageV2",
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      }
    },
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2018-11-30",
      "name": "[variables('IDName')]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "COPY-ManagedID",
        "count": 1
      },
      "comments": "Managed ID to change Azure Resources"      
    },
    {
      "type": "Microsoft.resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "name": "[variables('DSName')]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "COPY-DeployScript",
        "count": 1
      },
      "kind": "AzurePowerShell",      
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          
          "[resourceid('Microsoft.ManagedIdentity/userAssignedIdentities', variables('IDName'))]":{}
        }
      },
      "properties": {
        "azPowerShellVersion": "2.7",        
        "timeout": "PT15M",
        "retentionInterval": "P1D",        
        "cleanupPreference": "OnSuccess",        
        "primaryScriptUri": "[variables('DSScript')]",
        "arguments": "[variables('DSArgs')]"
      },
      "dependsOn": [
        "COPY-Storage",
        "COPY-ManagedID"
      ]
    }   
  ],
  "outputs": {
    
  }
}